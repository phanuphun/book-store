@model Book;
@{
    ViewData["Title"] = Model.Title;
}

<div class="mt-4">
    <div class="row">
        <div class="col-3">
            <img src="/bookCovers/@Model.Image"
                 class="w-100 border rounded" style="object-fit: cover;" alt="">
        </div>
        <div class="col-9">
            <div class="border rounded w-100 h-100 p-4 d-flex">
                <div class="w-100">
                    <h1 class="fw-bold"> @Model.Title </h1>
                    <div class="d-flex flex-column mt-4">
                        <span><b>ผู้เขียน :</b> @Model.Author </span>
                        <span><b>ผู้แปล :</b> @Model.Translater </span>
                        <span><b>นักวาด :</b>  @Model.Drawer </span>
                        <span class="mt-3"><b>จำนวนหน้า : </b>  @Model.Pages หน้า</span>
                        <span><b>น้ำหนัก :</b>  @Model.Weight </span>
                        <span><b>ความหนา/สูง :</b> @Model.Thickness </span>
                        <span><b>ขนาด :</b>  @Model.Size </span>
                    </div>

                </div>
                <div class="d-flex align-items-end">
                    <div class="pb-4 px-4 d-flex justify-content-end">
                        <div class="d-flex flex-column" style="min-width: 250px;">
                            <div class="w-100">
                                @if(Model.Amount == 0){
                                    <h1 class="text-danger fw-bold">
                                        สินค้าหมด
                                    </h1>
                                }
                                else
                                {
                                <h1 class="text-primary fw-bold">
                                    ฿ @Model.Price
                                </h1>
                                }
                            </div>
                            <label for="mt-5 fs-5"> จำนวน </label>
                            <select class="w-100 form-select" id="">
                                <option value="1" selected>1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                                <option value="10">10</option>
                            </select>
                            <button class="btn w-100 mt-2 btn-primary px-5 pt-2 mt-2">
                                <h5>
                                    เพิ่มใส่ตะกร้า
                                </h5>
                            </button>
                            <button class="btn w-100 mt-2 btn-secondary px-5 pt-2">
                                <h5>
                                    เพิ่มลงในสิ่งอยากได้
                                </h5>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="w-100 px-3 py-3 border rounded mt-4 ">
        <h4 class="fw-bold">
            รายละเอียดหนังสือ
        </h4>
        <p class="">
            @Model.Description
        </p>
    </div>
</div>