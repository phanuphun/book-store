@model Account
@{
    var msg = TempData["LoginSuccess"] as string;
    var errMsg = TempData["LoginError"] as string;
    ViewData["Title"] = "เข้าสู่ระบบ";
}

<div class="container">
    <div class="border border-2 py-3">
        <h2 class="text-center">เข้าสู่ระบบ</h2>
    </div>
    <form method="POST" asp-controller="Account" asp-action="Login"
          class="border border-2 border-top-0 px-4 py-2">
        @if (!string.IsNullOrEmpty(errMsg))
        {
            <div class="alert alert-danger" role="alert">
                @errMsg
            </div>
        }
        <div class="mb-3">
            <label asp-for="Username" class="form-label">Username</label>
            <input asp-for="Username" type="text" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control">
        </div>
        
        <div class="d-flex justify-content-start my-4">
            <button type="submit" class="btn btn-primary btn-md px-5">เข้าสู่ระบบ</button>
        </div>
    </form>
</div>