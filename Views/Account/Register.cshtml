@model Account;
@{
    var msg = TempData["RegisterSuccess"] as string;
    var errMsg = TempData["RegisterError"] as string;
    ViewData["Title"] = "สมัครสมาชิก";
    Layout = "~/Views/Shared/_layoutNone.cshtml";
}

<div class="w-100 h-100 min-vh-100 py-5 d-flex flex-column justify-content-center item-align-center
    bg-light bg-md-danger">
    <div class="container border border-3 rounded d-flex flex-column justify-content-center align-items-center bg-white"
         style="width: auto; max-width: 600px;">
        <div class="border-4 pt-4 w-100 text-center">
            <h3 class="fw-bold text-primary ">สมัครสมาชิก</h3>
            <hr>
        </div>
        @if (!string.IsNullOrEmpty(msg))
        {
            <div class="w-100 alert alert-success text-center" role="alert">
                @msg 
            </div>
        }
        @if(!string.IsNullOrEmpty(errMsg))
        {
            <div class="w-100 alert alert-danger text-center" role="alert">
                @errMsg
            </div>
        }
        <div class="w-100">
            <form method="POST" asp-contoller="Account" asp-action="Register"
                class="row pb-4 gy-2 gx-4">
                <div class="col-12 col-sm-6">
                    <label asp-for="FirstName" class="px-1"></label>
                    <input asp-for="FirstName" type="text" class="form-control" style="background-color:#f9fafb;" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-12 col-sm-6">
                    <label asp-for="LastName" class="px-1"></label>
                    <input asp-for="LastName" type="text" class="form-control" style="background-color:#f9fafb;" />
                </div>
                <div class="col-12 col-sm-6">
                    <label asp-for="Email" class="px-1"></label>
                    <input asp-for="Email" type="text" class="form-control" style="background-color:#f9fafb;" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-12 col-sm-6">
                    <label asp-for="Phone" class="px-1"></label>
                    <input asp-for="Phone" type="text" data-val="false"
                    class="form-control" maxlength="10" style="background-color:#f9fafb;"/>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <label asp-for="Username" class="px-1"></label>
                    <input asp-for="Username" type="text" class="form-control" style="background-color:#f9fafb;" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="col-12 col-sm-6">
                    <label asp-for="Password" class="px-1"></label>
                    <input asp-for="Password"  type="password" class="form-control" style="background-color:#f9fafb;" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="col-12 col-sm-6">
                    <label asp-for="ConfirmPassword" class="px-1"></label>
                    <input asp-for="ConfirmPassword"  type="password" class="form-control" style="background-color:#f9fafb;" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <label asp-for="Address" class="px-1"></label>
                    <textarea asp-for="Address" type="password" class="form-control" style="background-color:#f9fafb;"></textarea>
                </div>


                <div class="p-3 w-100">
                    <button class="w-100 btn btn-primary" type="submit">สมัคร</button>
                </div>
                <hr>
                <div class="w-100  d-flex justify-content-center">
                    <a class="px-2" asp-controller="Account" asp-action="Login"> เข้าสู่ระบบ </a>
                    <a class="px-2" asp-controller="Book" asp-action="Index"> กลับสู่หน้าแรก </a>
                </div>
            </form>
        </div>
    </div>
</div>


